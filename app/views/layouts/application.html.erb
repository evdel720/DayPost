<!DOCTYPE html>
<html>
<head>
  <title>Daypost</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= form_tag posts_path, method: :get, class: 'locale' do %>
  <%= select_tag 'set_locale',
    options_for_select(LANGUAGES, I18n.locale.to_s),
    onchange: 'this.form.submit()' %>
  <%= submit_tag 'submit' %>
  <%= javascript_tag "$('.locale input').hide()" %>
<% end %>

<% flash.each do |key, message| %>
  <div class="alert-<%= key %>"><%= message %></div>
<% end %>
<%= link_to t('.home'), posts_path %>
<% if user_signed_in? %>
  <p><%= t('.username') %><%= current_user.email %></p>
  <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
  <%= link_to t('.manage_info'), edit_user_registration_path %>
  <% if current_user.admin? %>
    <%= link_to t('.admin'), admin_root_path %>
  <% end %>
<% else %>
  <%= link_to t('.login'), user_session_path %>
<% end %>
<%= yield %>

</body>
</html>
