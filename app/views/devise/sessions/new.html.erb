<header>
  <h1><%= t('.sign_in') %></h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: t('.email') %>
    <%= f.input :password, required: false, label: t('.password') %>
    <%= f.input :remember_me, label: t('.remember'), as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_in'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
