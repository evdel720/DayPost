<header>
  <h1><%= t('.sign_up') %></h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, label: t('.email'), required: true, autofocus: true %>
    <%= f.input :password, label: t('.password'), required: true, hint: ("#{@minimum_password_length} " + t('.minimum') if @validatable) %>
    <%= f.input :password_confirmation, label: t('.password_confirmation'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_up'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
