<h2><%= t('.edit_user') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: t('.email'), required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: t('.password'), autocomplete: "off", hint: t('.leave'), required: false %>
    <%= f.input :password_confirmation, label: t('.password_confirmation'), required: false %>
    <%= f.input :current_password, label: t('.current'), hint: t('.confirm'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.update') %>
  </div>
<% end %>

<p><%= link_to t('.cancel'), registration_path(resource_name), data: { confirm: t('.sure') }, method: :delete %></p>

<%= link_to t('.back'), :back %>
