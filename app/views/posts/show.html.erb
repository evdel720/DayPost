<header>
  <h1><%= @post.title %></h1>
  <ul>
    <li><%= link_to "Edit Post", edit_post_path(@post), class: "edit" %></li>
    <li><%= link_to "Delete Post", post_path(@post),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this post?" },
        class: "delete" %></li>
  </ul>
</header>

<div class="like">
  <%= button_to "Like it #{ @post.count }", action: "like", controller: "posts" %>
</div>

<p><%= @post.content %></p>

<h2>Comments</h2>
<%= render partial: "comments/form" %>
<div>
  <%= render partial: 'posts/comment', collection: @post.comments %>
</div>
